[env:wemos_d1_mini32_dummy_usb]
extends = base, wemos_d1_mini32, slave, dummy, dummy_usb
build_flags = ${base.build_flags} ${slave.build_flags} ${5.build_flags} ${wemos_d1_mini32.build_flags}

[env:wemos_d1_mini32_dummy_ota]
